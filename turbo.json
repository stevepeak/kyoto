{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"],
      "env": [
        "DATABASE_URL",
        "AUTH_SECRET",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "GITHUB_APP_ID",
        "GITHUB_APP_SLUG",
        "GITHUB_APP_PRIVATE_KEY",
        "GITHUB_WEBHOOK_SECRET",
        "OPENAI_API_KEY",
        "SENTRY_AUTH_TOKEN",
        "TRIGGER_SECRET_KEY",
        "CONTEXT7_API_KEY",
        "VERCEL_URL",
        "VERCEL_BRANCH_URL",
        "VERCEL_PROJECT_PRODUCTION_URL"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "env": [
        "DATABASE_URL",
        "TRIGGER_SECRET_KEY",
        "GITHUB_APP_ID",
        "GITHUB_APP_PRIVATE_KEY",
        "GITHUB_WEBHOOK_SECRET",
        "CONTEXT7_API_KEY"
      ]
    },
    "preview": {
      "dependsOn": ["build"],
      "persistent": true,
      "cache": false
    },
    "test": {
      "outputs": [],
      "dependsOn": ["^build"]
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "lint:fix": {
      "outputs": [],
      "cache": false
    },
    "lint:ci": {
      "outputs": [],
      "cache": true
    },
    "typecheck": {
      "outputs": [],
      "dependsOn": ["^build"],
      "cache": true
    }
  }
}
