{
  "name": "@app/api",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "Server-side tRPC API definitions",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "clean": "rm -rf node_modules dist",
    "build": "bun run build:clean && bun run build:compile",
    "build:clean": "rm -rf dist",
    "build:compile": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --max-warnings=0 --cache --concurrency=2",
    "lint:fix": "eslint . --fix --cache --concurrency=2",
    "lint:ci": "eslint . --max-warnings=0 --cache --concurrency=1 --no-error-on-unmatched-pattern"
  },
  "dependencies": {
    "@app/config": "workspace:*",
    "@app/db": "workspace:*",
    "@app/linear": "workspace:*",
    "@app/posthog": "workspace:^",
    "@app/schemas": "workspace:*",
    "@sentry/nextjs": "catalog:",
    "@trigger.dev/sdk": "catalog:",
    "@trpc/server": "catalog:",
    "kysely": "catalog:",
    "superjson": "catalog:",
    "ts-dedent": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/node": "^22.18.10",
    "@types/pg": "^8.15.5",
    "tsconfig": "workspace:*",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
