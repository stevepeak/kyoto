{
  "name": "@app/api",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "Server-side tRPC API definitions",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "pnpm run build:clean && pnpm run build:compile",
    "build:clean": "rm -rf dist",
    "build:compile": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -b",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --max-warnings=0 --cache --concurrency=2",
    "lint:fix": "eslint . --fix --cache --concurrency=2",
    "lint:ci": "eslint . --max-warnings=0 --cache --concurrency=1 --no-error-on-unmatched-pattern"
  },
  "dependencies": {
    "@app/config": "workspace:*",
    "@app/db": "workspace:*",
    "@app/linear": "workspace:*",
    "@app/posthog": "workspace:^",
    "@app/schemas": "workspace:*",
    "@sentry/nextjs": "^10.25.0",
    "@trigger.dev/sdk": "^4.1.1",
    "@trpc/server": "11.6.0",
    "kysely": "^0.28.8",
    "superjson": "^2.2.2",
    "ts-dedent": "^2.2.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.18.10",
    "@types/pg": "^8.15.5",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
