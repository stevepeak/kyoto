{
  "name": "@app/db2",
  "type": "module",
  "version": "0.0.1",
  "description": "Drizzle ORM database package for web2 app",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema.ts"
  },
  "scripts": {
    "clean": "rm -rf node_modules dist",
    "db:generate": "bun --env-file=../../.env drizzle-kit generate",
    "db:migrate": "bun --env-file=../../.env tsx src/migrate.ts",
    "db:studio": "bun --env-file=../../.env drizzle-kit studio",
    "db:push": "bun --env-file=../../.env drizzle-kit push",
    "db:drop": "bun --env-file=../../.env drizzle-kit drop",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . && prettier --ignore-path='../../.prettierignore' --check .",
    "fix": "bunx eslint --fix --quiet . && prettier --ignore-path='../../.prettierignore' --log-level=silent --write ."
  },
  "dependencies": {
    "@app/config": "workspace:*",
    "drizzle-orm": "^0.45.0",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@kyoto/eslint-config": "workspace:*",
    "@types/node": "catalog:",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.19.2",
    "tsconfig": "workspace:*",
    "typescript": "catalog:"
  }
}
