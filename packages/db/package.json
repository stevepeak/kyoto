{
  "name": "@app/db",
  "type": "module",
  "version": "0.0.1",
  "description": "Database package for the app",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types.ts",
    "./schema": "./src/schema/index.ts"
  },
  "scripts": {
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:schema:dump": "pg_dump -s -O -x -d \"$DATABASE_URL\" | sed '/^SET /d; /set_config/d' > schema.sql",
    "db:seed": "psql \"$DATABASE_URL\" -f seed.sql",
    "db:load:schema": "psql \"$DATABASE_URL\" -f schema.sql",
    "db:reset": "pnpm db:push",
    "typecheck": "tsc -b",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --max-warnings=0 --cache --concurrency=2",
    "lint:fix": "eslint . --fix --cache --concurrency=2",
    "lint:ci": "eslint . --max-warnings=0 --cache --concurrency=1 --no-error-on-unmatched-pattern"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "bufferutil": "^4.0.9",
    "drizzle-orm": "^0.36.4",
    "pg": "^8.16.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^20.19.21",
    "@types/pg": "^8.15.5",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.30.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
