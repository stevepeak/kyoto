{
  "name": "kyoto",
  "repository": "stevepeak/kyoto",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "Kyoto",
  "workspaces": {
    "packages": [
      "apps/*",
      "config/*",
      "packages/*"
    ],
    "catalog": {
      "@ai-sdk/anthropic": "^2.0.53",
      "cron-parser": "^5.0.6",
      "@ai-sdk/openai": "^2.0.77",
      "@browserbasehq/stagehand": "^3.0.5",
      "@daytonaio/sdk": "^0.121.0",
      "@octokit/auth-app": "^8.1.2",
      "@octokit/rest": "^22.0.1",
      "@openrouter/ai-sdk-provider": "^1.2.3",
      "@openrouter/sdk": "^0.2.9",
      "@opentelemetry/api": "^1.9.0",
      "@opentelemetry/sdk-node": "^0.208.0",
      "@sentry/node": "^10.23.0",
      "@sentry/opentelemetry": "^10.25.0",
      "@sentry/nextjs": "^10.25.0",
      "@types/node": "^22.18.10",
      "trigger.dev": "^4.3.0",
      "@trigger.dev/sdk": "^4.3.0",
      "@trigger.dev/build": "^4.3.0",
      "@trigger.dev/react-hooks": "^4.3.0",
      "@trpc/server": "11.6.0",
      "@sindresorhus/is": "^7.1.1",
      "ai": "^5.0.107",
      "drizzle-orm": "^0.45.0",
      "eslint": "^9.37.0",
      "execa": "^9.6.1",
      "import-in-the-middle": "^2.0.0",
      "posthog-js": "^1.208.3",
      "posthog-node": "^5.13.2",
      "superjson": "^2.2.2",
      "ts-dedent": "^2.2.0",
      "typescript": "^5.9.3",
      "vectra": "^0.2.0",
      "zod": "^3.24.1"
    }
  },
  "bin": {
    "kyoto": "./apps/cli/bin/dev.js"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@app/web",
    "build": "turbo run build",
    "preview": "turbo run preview",
    "prepare": "husky || true",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "ci": "bun run typecheck && bun run lint && bun run knip && bun run build",
    "fix": "turbo run fix",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@ocavue/eslint-config": "^3.6.0",
    "@ocavue/tsconfig": "^0.5.0",
    "eslint": "^9.37.0",
    "knip": "^5.68.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.6.2",
    "turbo": "^2.6.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md,mdx}": [
      "prettier --write"
    ]
  },
  "packageManager": "bun@1.1.42",
  "engines": {
    "bun": "1"
  }
}
