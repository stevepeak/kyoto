{
  "name": "kyoto",
  "repository": "stevepeak/kyoto",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "Kyoto",
  "workspaces": {
    "packages": [
      "apps/*",
      "config/*",
      "packages/*"
    ],
    "catalog": {
      "@ai-sdk/openai": "^2.0.77",
      "@browserbasehq/stagehand": "^3.0.5",
      "@daytonaio/sdk": "^0.121.0",
      "@neondatabase/serverless": "^1.0.2",
      "@octokit/auth-app": "^8.1.2",
      "@octokit/rest": "^22.0.1",
      "@oclif/core": "^4.0.0",
      "@openrouter/ai-sdk-provider": "^1.2.3",
      "@opentelemetry/api": "^1.9.0",
      "@opentelemetry/sdk-node": "^0.208.0",
      "@sentry/node": "^10.23.0",
      "@sentry/opentelemetry": "^10.25.0",
      "@sentry/nextjs": "^10.25.0",
      "@trigger.dev/sdk": "4.1.2",
      "@trigger.dev/build": "4.1.2",
      "@trpc/server": "11.6.0",
      "@sindresorhus/is": "^7.1.1",
      "ai": "^5.0.107",
      "bufferutil": "^4.0.9",
      "chalk": "^5.6.2",
      "diff": "^8.0.2",
      "dotenv": "^17.2.3",
      "eslint": "^9.37.0",
      "execa": "^9.6.1",
      "import-in-the-middle": "^2.0.0",
      "kysely": "^0.28.8",
      "object-treeify": "^5.0.1",
      "openai": "^6.9.1",
      "ora": "^9.0.0",
      "p-map": "^7.0.4",
      "pg": "^8.16.3",
      "posthog-node": "^5.13.2",
      "superjson": "^2.2.2",
      "terminal-link": "^5.0.0",
      "ts-dedent": "^2.2.0",
      "typescript": "^5.9.3",
      "ws": "^8.18.3",
      "zod": "^3.24.1",
      "zod-to-json-schema": "^3.24.6"
    }
  },
  "bin": {
    "kyoto": "./apps/cli/bin/dev.js"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@app/web",
    "build": "turbo run build",
    "preview": "turbo run preview",
    "lint": "turbo run lint",
    "lint:profile": "TIMING=1 turbo run lint",
    "lint:ci": "turbo run lint:ci --cache-dir=.turbo",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "ci": "bun run typecheck && bun run lint && bun run knip && bun run build",
    "fix": "bun run fix:tsconfig && bun run fix:eslint && bun run fix:prettier",
    "fix:prettier": "prettier --write .",
    "fix:eslint": "turbo run lint:fix",
    "fix:tsconfig": "monorepo-typescript-references fix",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@ocavue/eslint-config": "^3.6.0",
    "@ocavue/tsconfig": "^0.5.0",
    "eslint": "^9.37.0",
    "knip": "^5.68.0",
    "monorepo-typescript-references": "^1.1.0",
    "prettier": "^3.6.2",
    "turbo": "^2.6.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "bun@1.1.42",
  "engines": {
    "bun": "1"
  }
}
