{
  "name": "@app/kyoto",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "bun@1.3.0",
  "description": "Kyoto",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "preview": "turbo run preview",
    "lint": "turbo run lint",
    "lint:profile": "TIMING=1 turbo run lint",
    "lint:ci": "turbo run lint:ci --cache-dir=.turbo",
    "typecheck": "tsc -b",
    "test": "turbo run test",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "ci": "bun run typecheck && bun run lint && bun run knip && bun run build",
    "fix": "bun run fix:tsconfig && bun run fix:eslint && bun run fix:prettier",
    "fix:prettier": "prettier --write .",
    "fix:eslint": "turbo run lint:fix",
    "fix:tsconfig": "monorepo-typescript-references fix",
    "clean": "turbo run clean && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
  },
  "devDependencies": {
    "@ocavue/eslint-config": "^3.6.0",
    "@ocavue/tsconfig": "^0.5.0",
    "eslint": "^9.37.0",
    "knip": "^5.68.0",
    "monorepo-typescript-references": "^1.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "turbo": "^2.6.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
