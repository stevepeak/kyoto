---
import Layout from '@/layouts/layout.astro'
import { GITHUB_APP_SLUG } from 'astro:env/server'

const installUrl = `https://github.com/apps/${GITHUB_APP_SLUG}/installations/new`
---

<Layout title="Connect GitHub">
  <div class="max-w-xl mx-auto py-16 px-6 text-center space-y-6">
    <h1 class="text-2xl font-semibold">Install our GitHub App</h1>
    <p class="text-muted-foreground">
      Install the app on your organization to grant access to your repositories.
      You can choose repositories during installation and later enable them in
      Tailz.
    </p>
    <a
      href={installUrl}
      class="inline-flex items-center justify-center rounded-md border px-4 py-2"
      >Install on GitHub</a
    >
  </div>
</Layout>
