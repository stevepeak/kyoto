---
import Layout from '@/layouts/layout.astro'
import {
  FeatureGrid,
  Faq,
  LandingFooter,
  LandingHero,
  Metrics,
  Pricing,
  Testimonials,
} from '@/components/landing'
---

<!-- Preload critical hero background image -->
<link rel="preload" as="image" href="/kyoto.png" />

<Layout title="Kyoto">
  <main
    class="flex flex-col gap-0 bg-linear-to-b from-background via-muted/10 to-background text-foreground"
  >
    <LandingHero client:idle />
    <FeatureGrid />
    <Metrics />
    <Testimonials />
    <Pricing />
    <Faq client:visible />
  </main>
  <LandingFooter />
</Layout>
