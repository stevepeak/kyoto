{
  "name": "@app/trigger",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "Trigger.dev workflows for the application",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "clean": "rm -rf node_modules dist",
    "dev": "bunx trigger.dev@latest dev",
    "deploy": "bunx trigger.dev@latest deploy",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ignore-pattern='.trigger' . && prettier --ignore-path='../../.prettierignore' --check .",
    "fix": "eslint --fix --quiet --ignore-pattern='.trigger' . && prettier --ignore-path='../../.prettierignore' --log-level=silent --write ."
  },
  "dependencies": {
    "@app/config": "workspace:*",
    "@app/db": "workspace:*",
    "@app/posthog": "workspace:^",
    "@octokit/auth-app": "catalog:",
    "@octokit/rest": "catalog:",
    "@opentelemetry/api": "catalog:",
    "@opentelemetry/sdk-node": "catalog:",
    "@sentry/node": "catalog:",
    "@sentry/opentelemetry": "catalog:",
    "@trigger.dev/sdk": "catalog:",
    "ai": "catalog:",
    "import-in-the-middle": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.28.5",
    "@kyoto/eslint-config": "workspace:*",
    "@sentry/esbuild-plugin": "^4.6.0",
    "@trigger.dev/build": "catalog:",
    "@types/node": "catalog:",
    "typescript": "catalog:"
  }
}
