{
  "name": "@app/trigger",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "Trigger.dev workflows for the application",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./src/helpers/generate-stories": "./src/helpers/generate-stories.ts",
    "./src/helpers/github-status": "./src/helpers/github-status.ts",
