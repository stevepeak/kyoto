{
  "name": "@usekyoto/cli",
  "type": "module",
  "version": "0.0.13",
  "private": false,
  "description": "Kyoto",
  "keywords": [
    "ai",
    "vibe-coding",
    "vibe-check",
    "development-tools",
    "code-quality",
    "code-review",
    "code-analysis",
    "developer-tools",
    "mcp",
    "ci"
  ],
  "bin": {
    "kyoto": "./bin/dev.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin/packed.js",
    "dist/**",
    "README.md"
  ],
  "engines": {
    "bun": ">=1"
  },
  "scripts": {
    "clean": "rm -rf node_modules dist",
    "build": "rm -rf dist && bun build ./src/cli.tsx --outdir dist --target node --format esm --sourcemap --external react --external commander --external ink --external ink-link --external ink-select-input --external ink-spinner --external ink-text-input --external playwright --external playwright-core",
    "postinstall": "playwright install --with-deps chromium || true",
    "typecheck": "tsc --noEmit",
    "publish": "./scripts/publish.sh",
    "test:pack": "./scripts/test-pack.sh",
    "lint": "eslint . && prettier --ignore-path='../../.prettierignore' --check .",
    "fix": "eslint --fix --quiet . && prettier --ignore-path='../../.prettierignore' --log-level=silent --write ."
  },
  "dependencies": {
    "@ai-sdk/anthropic": "catalog:",
    "@ai-sdk/openai": "catalog:",
    "@app/agents": "workspace:^",
    "@app/playwright": "workspace:^",
    "@app/schemas": "workspace:^",
    "@app/shell": "workspace:^",
    "@app/types": "workspace:^",
    "@app/utils": "workspace:^",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@openrouter/ai-sdk-provider": "catalog:",
    "ai": "catalog:",
    "commander": "^14.0.2",
    "execa": "catalog:",
    "ink": "^6.5.1",
    "playwright": "^1.57.0",
    "playwright-core": "^1.57.0",
    "ink-link": "^5.0.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "posthog-node": "catalog:",
    "react": "^19.2.1",
    "ts-dedent": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@kyoto/eslint-config": "workspace:*",
    "@types/node": "catalog:",
    "@types/react": "^19.2.2",
    "tsconfig": "workspace:*",
    "typescript": "catalog:"
  }
}
